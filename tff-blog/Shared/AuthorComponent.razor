@inject IHttpClientFactory ClientFactory

@if (author == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="authorbar">
        <img class="photo" src="@this.author.PhotoUrl" />
        <p class="name">@this.author.Name</p>
        <p>@this.author.Description</p>
    </div>
}

@code {
    private ViewModels.AuthorViewModel author;

    protected override async Task OnInitializedAsync()
    {
        var client = ClientFactory.CreateClient("Client");
        this.author = await client.GetFromJsonAsync<ViewModels.AuthorViewModel>("data/author.json");
    }
}
