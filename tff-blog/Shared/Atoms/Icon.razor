<img class=@IconCssClass src="@IconImage" alt="@AltIconImageText" />

@code {
    [Parameter]
    public required string IconImage { get; set; }

    [Parameter]
    public required string AltIconImageText { get; set; }

    [Parameter]
    public bool InvertColor { get; set; }

    private string IconCssClass => InvertColor ? "icon inverted" : "icon";
}
